{
  "compilerOptions": {
    "strict": true,
    "target": "es2021",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsxImportSource": "solid-js",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vitest/globals", "vitest/importMeta"]
  }
}
