rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{col}/{docs=**} {
      allow read, create, delete: if true;

      allow update: if
        (col != "batchVersion" && col != "pocFirestoreRulesVersion")
          || request.resource.data.prevVersion == resource.data.version;
    }
  }
}
