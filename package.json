{
  "name": "rejysten",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src/**/*.{ts,tsx}",
    "fix": "pnpm run lint --fix; prettier --write src/**/*.{ts,tsx}",
    "build": "vite build",
    "dev": "vite",
    "tsc": "tsc --noEmit",
    "test": "pnpm run tsc && pnpm run test/nocheck",
    "test/nocheck": "pnpm run emulator:clear && vitest run",
    "prepare": "git config --local core.hooksPath .githooks",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "emulator:build": "podman build -t firebase-emulator -f emulator.Containerfile",
    "emulator:run": "podman run --rm -it --network host -v $PWD/firestore.local.rules:/firebase/firestore.rules firebase-emulator",
    "emulator:clear": "curl -X DELETE 'http://localhost:8080/emulator/v1/projects/demo/databases/(default)/documents'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/youxkei/rejysten.git"
  },
  "author": "Hisayuki Mima <youxkei@gmail.com>",
