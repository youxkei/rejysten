{
  "name": "rejysten",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "fix": "eslint --fix src/**/*.{ts,tsx}; prettier --write src/**/*.{ts,tsx}",
    "build": "vite build",
    "dev": "vite",
    "test": "vitest run",
    "test/update": "vitest run -u",
    "postinstall": "patch-package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/youxkei/rejysten.git"
  },
  "author": "Hisayuki Mima <youxkei@gmail.com>",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/youxkei/rejysten/issues"
  },
  "homepage": "https://github.com/youxkei/rejysten#readme",
  "devDependencies": {
    "@solidjs/testing-library": "^0.7.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/js-yaml": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@vanilla-extract/vite-plugin": "^3.8.0",
    "babel-preset-solid": "^1.7.3",
    "eslint": "^8.38.0",
    "eslint-plugin-import": "^2.27.5",
    "fake-indexeddb": "^4.0.1",
    "happy-dom": "^9.1.9",
    "patch-package": "^6.5.1",
    "solid-devtools": "^0.26.0",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "vite-plugin-checker": "^0.5.6",
    "vite-plugin-node-stdlib-browser": "^0.2.1",
    "vite-plugin-solid": "^2.7.0",
    "vite-tsconfig-paths": "^4.0.8",
    "vitest": "^0.29.8"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.11.0",
    "dexie": "4.0.0-alpha.4",
    "firebase": "9.17.2",
    "id128": "^1.6.6",
    "js-convert-case": "^4.2.0",
    "js-yaml": "^4.1.0",
    "node-stdlib-browser": "^1.2.0",
    "rxdb": "^14.6.4",
    "rxjs": "^7.8.0",
    "solid-js": "^1.7.3",
    "superstruct": "^1.0.3"
  },
  "overrides": {
    "@vanilla-extract/vite-plugin": {
      "vite": "^3"
    }
  },
  "prettier": {
    "printWidth": 120
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "import"
    ],
    "root": true,
    "rules": {
      "@typescript-eslint/consistent-type-imports": "error",
      "import/order": [
        "error",
        {
          "groups": [
            "type",
            "external",
            "internal"
          ],
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc"
          }
        }
      ]
    }
  }
}
